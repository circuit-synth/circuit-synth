# Fast Generation API Keys
# OpenRouter API Key (required for fast generation)
OPENROUTER_API_KEY=your_openrouter_key_here

# Google Cloud Project Settings (optional, for direct Vertex AI)
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_GENAI_USE_VERTEXAI=FALSE

# Model Configuration
DEFAULT_FAST_MODEL=google/gemini-2.5-flash
FALLBACK_MODEL=google/gemini-2.0-flash-experimental

# Circuit Generation Settings
FAST_GENERATION_ENABLED=TRUE
CACHE_GENERATED_CIRCUITS=TRUE
VALIDATE_KICAD_COMPONENTS=TRUE

# Token Budget Monitoring
# Monthly token budget limit (default: 10 million tokens)
MONTHLY_TOKEN_BUDGET=10000000
# Alert thresholds (comma-separated percentages)
BUDGET_ALERT_THRESHOLDS=75,90,95
# Estimated cost per 1M tokens in USD (default for Sonnet 4.5)
COST_PER_MILLION_TOKENS=3.00